{
  "manifest_version": 2,
  "name": "Arweave Web Wallet",
  "short_name": "Arweave Web Wallet",
  "version": "1.0.0",
  "description": "A web wallet for the permaweb",
  "permissions": [
		"storage",
		"tabs",
		"webRequest",
		"webRequestBlocking",
		"contextMenus",
		"downloads",
    "<all_urls>",
    "activeTab",
    "alarms"
  ],
  "browser_action": {
    "default_popup": "popup/index.html",
    "default_title": "Arweave Web Wallet",
    "default_logo": "./src/popup/assets/icon.png"
  },
  "icons": {
    "128": "./assets/icon.png"
  },
  "content_scripts": [
    {
      "js": [
        "contentscript.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "content_security_policy": "script-src 'self' http://localhost:35729; object-src 'self'"
}
